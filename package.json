{
  "name": "mcpick",
  "version": "1.0.0",
  "description": "MCP Server Manager for Claude Desktop",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf dist dist_temp dist_build",
    "dev": "npm run clean && tsc && npm run copy-files && electron .",
    "build": "npm run clean && tsc && npm run copy-files && electron-builder",
    "compile": "tsc",
    "copy-files": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/ && cp src/renderer/simple-renderer.js dist/renderer/ && cp -r dist_build/* dist/",
    "bundle-renderer": "browserify src/renderer/index-browser.js -o dist/renderer/index-browser-bundle.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "generate-icons": "electron-icon-builder --input=./assets/icon.svg --output=./assets"
  },
  "keywords": [
    "mcp",
    "claude",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.mcpick.app",
    "productName": "MCPick",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "browserify": "^17.0.1",
    "concurrently": "^8.2.2",
    "electron": "^30.1.4",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "electron-is-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.0",
    "@mui/material": "^5.0.0",
    "electron-store": "^8.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
